<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.forlost.zhongtuo">

    <uses-permission android:name="android.permission.CAMERA" /> <!-- 相机权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 读文件权限 -->
    <uses-feature android:name="android.hardware.camera" /> <!-- 使用特性 -->
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.forlost.zhongtuo.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.forlost.zhongtuo.activity.LoginActivity"/>
        <activity android:name="com.forlost.zhongtuo.activity.MainActivity"/>
        <activity android:name="com.forlost.zhongtuo.activity.RegistActivity"/>

        <activity
            android:name="com.forlost.zhongtuo.ui.chat.MessageListActivity"
            android:label="会话详情" />

        <activity
            android:name="com.forlost.zhongtuo.activity.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>