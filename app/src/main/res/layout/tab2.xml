<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <ImageView
        android:background="@drawable/radius_imageview"
        android:id="@+id/actor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_local_airport_24" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="商户自定标题"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        />

    <TextView
        android:id="@+id/task_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务等级"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp" />

    <TextView
        android:id="@+id/task_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务分类"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="180dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="佣金:"
        android:layout_toLeftOf="@+id/task_money"
        android:layout_marginTop="10dp"
        android:textColor="@color/design_default_color_error" />

    <TextView
        android:id="@+id/task_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="佣金"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/design_default_color_error" />


    <TextView
        android:id="@+id/finish_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成数"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="100dp" />

    <TextView
        android:id="@+id/else_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余数"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="180dp"
        />



</RelativeLayout>